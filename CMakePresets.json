{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 10,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "dev",
      "description": "Base preset for library developers",
      "binaryDir": "${sourceDir}/build",
      "hidden": true,
      "cacheVariables": {
        "PCOG_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "dev-linux-clang-14",
      "description": "Linux preset with clang++-14 for library developers",
      "hidden": false,
      "inherits": ["dev"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Werror -Wshadow -Wnon-virtual-dtor -pedantic -Wcast-align -Wold-style-cast -Wunused -Woverloaded-virtual -Wconversion -Wpedantic -Wmisleading-indentation -Wimplicit-fallthrough -Wformat=2 -Wdouble-promotion -Wnull-dereference",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++-14",
        "CMAKE_C_COMPILER": "/usr/bin/clang-14"
      }
    },
    {
      "name": "dev-linux-gnu",
      "description": "Linux preset with g++-11 for library developers",
      "hidden": false,
      "inherits": ["dev"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wshadow -Wnon-virtual-dtor -pedantic -Wcast-align -Wold-style-cast -Wunused -Woverloaded-virtual -Wconversion -Wpedantic -Wmisleading-indentation -Wimplicit-fallthrough -Wformat=2 -Wdouble-promotion -Wuseless-cast -Wnull-dereference -Wlogical-op -Wduplicated-cond -Wduplicated-branches",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++-11",
        "CMAKE_C_COMPILER": "/usr/bin/gcc-11"
      }
    }
  ]
}